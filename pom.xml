<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <!-- Sonatype POM as parent so that we can deploy to their maven repo -->
    <!-- To cut a release:
            1. mvn clean install (make sure it builds properly)
            2. mvn release:clean
            3. mvn release:prepare (to set up the release and tag it)
            4. mvn release:perform (uploads files to sonatype repository) -->
    <parent>
        <groupId>org.sonatype.oss</groupId>
        <artifactId>oss-parent</artifactId>
        <version>7</version>
    </parent>

    <groupId>com.closure-sys</groupId>
    <artifactId>freezedry</artifactId>
    <version>0.2.9</version>
    <packaging>bundle</packaging>

    <name>freezedry</name>
    <url>http://robphilipp.github.io/freezedry/</url>

    <properties>

        <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>

        <!-- building OSGi bundles-->
        <maven.bundle.plugin.version>2.4.0</maven.bundle.plugin.version>

        <!-- logging -->
        <slf4j.version>1.7.5</slf4j.version>
        <logback.version>1.0.13</logback.version>

        <!-- testing -->
        <junit.version>4.8.1</junit.version>
        <maven.surefire.version>2.16</maven.surefire.version>
        <maven.failsage.version>2.16</maven.failsage.version>
        <exam.version>3.4.0</exam.version>
        <url.version>1.6.0</url.version>

        <!-- freezedry project dependencies -->
        <json.version>20090211_1</json.version>
        <apache.commons-io.version>1.4_3</apache.commons-io.version>

    </properties>

    <licenses>
        <license>
            <name>The Apache Software License, Version 2.0</name>
            <url>http://www.apache.org/licenses/LICENSE-2.0.txt</url>
            <distribution>repo</distribution>
            <comments>Use as you wish. Contribute as you wish. Karma.</comments>
        </license>
    </licenses>

    <organization>
        <name>closure, llc</name>
        <url>http://www.closure-sys.com</url>
    </organization>

    <developers>
        <developer>
            <id>rob.philipp</id>
            <name>Rob Philipp</name>
            <email>rob.philipp@closure-sys.com</email>
            <url>http://www.closure-sys.com</url>
            <organization>closure, llc</organization>
            <organizationUrl>http://www.closure-sys.com</organizationUrl>
            <roles>
                <role>architect</role>
                <role>developer</role>
            </roles>
            <timezone>-4</timezone>
        </developer>
    </developers>

    <scm>
        <connection>scm:git:git@github.com:robphilipp/freezedry.git</connection>
        <developerConnection>scm:git:git@github.com:robphilipp/freezedry.git</developerConnection>
        <url>git@github.com:robphilipp/freezedry.git</url>
    </scm>

    <build>
        <resources>
            <resource>
                <directory>src/main/resources</directory>
                <filtering>false</filtering>
            </resource>
        </resources>

        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-assembly-plugin</artifactId>
                <version>2.4</version>
            </plugin>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-compiler-plugin</artifactId>
                <version>3.1</version>
                <configuration>
                    <source>1.7</source>
                    <target>1.7</target>
                </configuration>
            </plugin>

            <!-- unit testing -->
            <plugin>
                <groupId>org.apache.maven.surefire</groupId>
                <artifactId>maven-surefire-common</artifactId>
                <version>${maven.surefire.version}</version>
            </plugin>

            <!-- integration testing -->
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-failsafe-plugin</artifactId>
                <version>${maven.failsage.version}</version>
                <configuration>
                    <parallel>methods</parallel>
                    <threadCount>10</threadCount>
                    <forkCount>4</forkCount>
                    <reuseForks>false</reuseForks>
                </configuration>
                <executions>
                    <execution>
                        <goals>
                            <goal>integration-test</goal>
                            <goal>verify</goal>
                        </goals>
                    </execution>
                </executions>
            </plugin>

            <!-- osgi bundle plugin-->
            <plugin>
                <groupId>org.apache.felix</groupId>
                <artifactId>maven-bundle-plugin</artifactId>
                <version>${maven.bundle.plugin.version}</version>
                <extensions>true</extensions>
                <configuration>
                    <instructions>
                        <Export-Package>
                            org.freezedry.difference*;verision=${project.version},
                            org.freezedry.persistence*;verision=${project.version},
                            org.freezedry.serialization*;verision=${project.version}
                        </Export-Package>
                        <Private-Package>
                            org.freezedry.*
                        </Private-Package>
                    </instructions>
                </configuration>
                <!--<executions>-->
                    <!--<execution>-->
                        <!--<id>bundle-manifest</id>-->
                        <!--<phase>process-classes</phase>-->
                        <!--<goals>-->
                            <!--<goal>manifest</goal>-->
                        <!--</goals>-->
                    <!--</execution>-->
                <!--</executions>-->
            </plugin>
        </plugins>

    </build>

    <profiles>
        <!--To sign the artifact for deploying to maven central, use release:perform or build using: -->
        <!--  mvn -P release-sign-artifacts clean install-->
        <profile>
            <id>release-sign-artifacts</id>
            <activation>
                <property>
                    <name>performRelease</name>
                    <value>true</value>
                </property>
            </activation>
            <build>
                <plugins>
                    <plugin>
                        <groupId>org.apache.maven.plugins</groupId>
                        <artifactId>maven-gpg-plugin</artifactId>
                        <version>1.4</version>
                        <executions>
                            <execution>
                                <id>sign-artifacts</id>
                                <phase>verify</phase>
                                <goals>
                                    <goal>sign</goal>
                                </goals>
                            </execution>
                        </executions>
                    </plugin>
                </plugins>
            </build>
        </profile>

